# ===========================================
# EchoForge Production Environment Variables
# ===========================================
# Copy to Vercel dashboard or .env.local

# ============ DATABASE ============
# Neon PostgreSQL - Get from dashboard.neon.tech
DATABASE_URL="postgresql://user:password@ep-xxxxx.region.neon.tech/neondb?sslmode=require"

# ============ AUTHENTICATION ============
NEXTAUTH_SECRET="your-super-secret-key-here-generate-new-one"
NEXTAUTH_URL="https://your-domain.vercel.app"

# Admin credentials (required for first login)
DEFAULT_ADMIN_EMAIL="owner@echoforge.io"
DEFAULT_ADMIN_PASSWORD="YourSecurePassword123!"

# ============ AI PROVIDERS ============
# At least one is required for AI chat
OPENAI_API_KEY="sk-..."
GOOGLE_AI_KEY="AIza..."
ANTHROPIC_API_KEY="sk-ant-..."
XAI_API_KEY="xai-..."

# ============ CRYPTO PAYMENTS (USDT) ============
USDT_TRC20_WALLET="TYourProductionWalletAddress"
USDT_ERC20_WALLET="0xYourProductionWalletAddress"
USDT_BEP20_WALLET="0xYourProductionWalletAddress"

# ============ EMAIL SERVICE ============
# Choose SendGrid or Postmark
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="noreply@echoforge.io"
# OR
# POSTMARK_API_KEY="your-key"
# POSTMARK_FROM_EMAIL="noreply@echoforge.io"

# ============ ML API ============
NEXT_PUBLIC_ECHOFORGE_API_URL="https://your-ml-api.onrender.com"
NEXT_PUBLIC_ECHOFORGE_APP_URL="https://your-app.onrender.com"
NEXT_PUBLIC_ECHOFORGE_API_KEY="your-production-api-key"

# ============ STRIPE (Optional) ============
# STRIPE_SECRET_KEY="sk_live_..."
# STRIPE_PUBLISHABLE_KEY="pk_live_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# ============ FLUTTERWAVE (Optional) ============
# NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY="FLWPUBK-..."

# ============ MONITORING (Optional) ============
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# SENTRY_DSN="https://...@sentry.io/..."
